        <Label Content="Гипотенуза второго треугольника" HorizontalAlignment="Left" Margin="338,349,0,0" VerticalAlignment="Top"/>
        <Label Content="Гипотенуза первого треугольника" HorizontalAlignment="Left" Margin="10,349,0,0" VerticalAlignment="Top" Width="198"/>
        <Label Content="(Катеты первого треугольника)" HorizontalAlignment="Left" Margin="179,57,0,0" VerticalAlignment="Top"/>
        <Label Content="(Катеты второго треугольника)" HorizontalAlignment="Left" Margin="182,120,0,0" VerticalAlignment="Top"/>
